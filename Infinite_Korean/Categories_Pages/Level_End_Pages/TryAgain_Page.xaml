<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Infinite_Korean.Categories_Pages.Level_End_Pages.TryAgain_Page">

    <Grid>

        <!-- Load Page Background -->
        <Image Source="GradientBGD.png" HorizontalOptions="Fill" VerticalOptions="Fill" Aspect="AspectFill"/>

        <!-- Page Texts-->
        <Label Text="You Failed" TextColor="IndianRed" FontFamily="MyFont_Malgun_Bold" FontSize="40" 
               Margin="15,200,15,15" VerticalOptions="Start" HorizontalOptions="Center" />
        <Label Text="You reached the Maximum Allowed Mistakes" TextColor="IndianRed" FontFamily="MyFont_Malgun_Semilight" FontSize="30" 
               HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center" />

        <!-- Return to Level Page -->
        <Label Text="Try Again" TextColor="IndianRed" FontFamily="MyFont_Malgun_Semilight" FontSize="25" 
               Margin="0,0,0,200" HorizontalTextAlignment="Center" VerticalOptions="End" HorizontalOptions="Center" />
        <ImageButton x:Name="TryAgain_Button" BackgroundColor="Transparent" Source="Play_Button.png" WidthRequest="100" HeightRequest="100"
                     Margin="0,0,0,75" VerticalOptions="End" HorizontalOptions="Center" Clicked="TryAgain_Button_Clicked" />

    </Grid>

</ContentPage>